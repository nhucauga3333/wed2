DROP DATABASE IF EXISTS QLDD;

CREATE DATABASE QLDD;

CREATE TABLE Account (
    FirstName varchar(200) CHARSET utf8,
	LastName varchar(200) CHARSET utf8,
    Account varchar(200) CHARSET utf8,
    Password varchar(200) CHARSET utf8
);

create table SANPHAM(
	ID int not null PRIMARY KEY AUTO_INCREMENT,
    MaSP varchar(200) CHARSET utf8,
	MaLoai int,
    TenSP varchar(200) CHARSET utf8,
    Gia int,
 	ImgPath varchar(200) CHARSET utf8
);

create table LOAISP(
	ID int not null PRIMARY KEY AUTO_INCREMENT,
    MaLoai INT,
    TenLoai varchar(200) CHARSET utf8,
    ImgPath varchar(200) CHARSET utf8
);



create table KHACHHANG(
	ID int not null PRIMARY KEY AUTO_INCREMENT,
    MaKH INT,
    TenKH varchar(200) CHARSET utf8,
    Sdt int,
    GioiTinh varchar(2000) CHARSET utf8,
 	DiaChi varchar(200) CHARSET utf8,
    Gmail varchar(200) CHARSET utf8
    
);

create table NHANVIEN(
	ID int not null PRIMARY KEY AUTO_INCREMENT,
    MaNV INT,
    TenNV varchar(200) CHARSET utf8,
    Sdt int,
    GioiTinh varchar(2000) CHARSET utf8,
 	DiaChi varchar(200) CHARSET utf8,
    CMND INT
);

create table HOADON(
	ID int not null PRIMARY KEY AUTO_INCREMENT,
    SoHD varchar(2000) CHARSET utf8,
    NgLap DATETIME,
    TenKH varchar(2000) CHARSET utf8,
    SdtKH varchar(2000) CHARSET utf8,
    DiaChiGiaoHang varchar(2000) CHARSET utf8,
 	TongTien INT
);

create table CTHOADON(
	ID int not null PRIMARY KEY AUTO_INCREMENT,
    TenSP varchar(2000) CHARSET utf8,
    SoLuong INT,
    DonGia INT,
 	ThanhTien INT
);


